<!DOCTYPE html>
<html>
	<head>
		<title><%= title %></title>
		<link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap.css">
		<link rel='stylesheet' href='/stylesheets/style.css' />
	</head>
	<body  class="mix-bg">
	  	<div class="container-fluid">
	  		<% include header%>
			<% if (success) { %>
	        	<div class="alert alert-success">
		        	<%= success %>
		        </div>
	    	<% } %>
	    	<% if (error) { %>
	        	<div class="alert alert-danger">
	        		<%= error %>
	    		</div> 
	    	<% } %>
	    	<div class="row mt100 text-center">
	    		<div class="col-md-4 col-md-offset-1"><h2>个人用户登录</h2></div>
	    	</div>
	    	<form class="form-horizontal mt30" method="post">
			    <div class="form-group">
				    <label for="username" class="col-md-offset-1 col-md-1 control-label">用户名</label>
				    <div class="col-md-3">
				        <input type="text" class="form-control" id="username" name="username">
				    </div>
				    <div class="col-md-3">你的账户名称，用于登录和显示</div>
			    </div>
			    <div class="form-group">
				    <label for="password" class="col-md-offset-1 col-md-1 control-label">密码</label>
				    <div class="col-md-3">
				        <input type="password" class="form-control" id="password" name="password">
				    </div>
			    </div>
			    <div class="form-group">
				    <div class="col-md-offset-2 col-md-3 text-center">
				        <button type="submit" class="btn btn-primary btn-lg btn-block">登录</button>
				    </div>
			    </div>
			</form>
	    </div>
    </body>
  <script src="http://cdn.bootcss.com/jquery/3.2.1/jquery.min.js"></script>
  <script type="text/javascript" src="/javascripts/bootstrap.js"></script>
	<script type="text/javascript" charset="utf-8">
        window.onload = function () {
            setTimeout(function(){
            	$(".alert").hide();
            },1000)
        }
    </script>
</html>
